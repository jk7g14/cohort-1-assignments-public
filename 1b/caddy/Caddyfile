:80 {
	# Smart contracts deployment server
	handle_path /deployment* {
		reverse_proxy sc-deployment-server:80
	}
	
	# EVM Node RPC service  
	handle_path /rpc* {
		reverse_proxy geth:8545
	}
	
	# Explorer (blockscout frontend)
	handle_path /explorer* {
		reverse_proxy host.docker.internal:4002
	}
	
	# Blockscout static assets (Next.js files, icons, etc.)
	handle /_next* {
		reverse_proxy host.docker.internal:4002
	}
	
	handle /assets* {
		reverse_proxy host.docker.internal:4002
	}
	
	handle /icons* {
		reverse_proxy host.docker.internal:4002
	}
	
	# Blockscout API routes
	handle /api* {
		reverse_proxy host.docker.internal:4002
	}
	
	# Blockscout WebSocket routes
	handle /socket* {
		reverse_proxy host.docker.internal:4002
	}
	
	# Graph node GraphQL playground (built-in)
	handle_path /graph-playground* {
		reverse_proxy graph-node:8000
	}
	
	# Graph node GraphQL API
	handle_path /graph-api* {
		reverse_proxy graph-node:8000
	}
	
	# Default response - return 404 for unmatched routes
	respond 404
}
